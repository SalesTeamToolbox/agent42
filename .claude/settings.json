{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          ".claude/hooks/context-loader.py"
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          ".claude/hooks/security-monitor.py",
          ".claude/hooks/format-on-write.py"
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          ".claude/hooks/test-validator.py",
          ".claude/hooks/learning-engine.py"
        ]
      }
    ]
  }
}
